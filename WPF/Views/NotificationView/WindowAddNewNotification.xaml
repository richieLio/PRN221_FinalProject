<Window x:Class="WPF.Views.NotificationView.WindowAddNewNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF.Views.NotificationView"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Subject:" Margin="5"/>
        <TextBox Grid.Row="1" x:Name="SubjectTextBox" Margin="5" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

        <Label Grid.Row="2" Content="Content:" Margin="5"/>
        <TextBox Grid.Row="3" x:Name="ContentTextBox" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

        <Button Grid.Row="4" Content="Send" HorizontalAlignment="Center" Margin="5" Click="SendButton_Click"/>
    </Grid>
</Window>
